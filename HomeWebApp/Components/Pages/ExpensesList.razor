@page "/expense/list"
@using HomeWebApp.Services

<MudPaper>
    <MudText Typo="Typo.h4" Class="pa-2" Align="Align.Center">Wydatki</MudText>
</MudPaper>

<MudStack Class="pa-2" Spacing="3">
    @foreach (var item in _expenseService.Expenses)
    {
        <MudButton Href="@("/expense/" + item.Id)" Variant="Variant.Filled" Class="pa-6" FullWidth="true" Style="@("color: " + item.Category.Color + ";")">
            <MudGrid>
                <MudItem xs="4">@item.Date</MudItem>
                <MudItem xs="4">@item.Description</MudItem>
                <MudItem xs="4">@item.Amount</MudItem>
            </MudGrid>
        </MudButton>
    }
</MudStack>
<MudPaper Class="pa-2" Style="position:fixed; bottom:64px; width:100%;">
    <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.Center">
        <MudButton Href="/expense/list" Color="Color.Primary">Lista</MudButton>
        <MudButton Href="/expense/summary">Podsumowanie</MudButton>
        <MudButton Href="/expense/-1" Color="Color.Primary" Variant="Variant.Filled">Dodaj</MudButton>
    </MudStack>
</MudPaper>