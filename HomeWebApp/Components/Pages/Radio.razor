@page "/radio"
<MudStack Class="pa-4">
    @foreach (var item in _radioStationService.Stations)
    {
        <MudButton OnClick="@(() => OnStationClick(item.Id))" Variant="Variant.Filled" Class="pa-6" FullWidth="true" Color="@(_currentId == item.Id ? Color.Primary : Color.Default)">
            <MudGrid>
                <MudItem xs="3">@item.Name</MudItem>
                <MudItem xs="8">@item.Url</MudItem>
                <MudItem xs="1"><MudIconButton OnClick="@(() => OnPlayClick(item.Id))" Size="Size.Small" Icon="@(_currentId == item.Id && _isPlaying ? Icons.Material.Filled.Pause : Icons.Material.Filled.PlayArrow)" /></MudItem>
            </MudGrid>
        </MudButton>
    }
</MudStack>

<script>
    window.myApp = {
        newAudioSource: function(src)
        {
            myAudio = document.getElementById('myAudio');
            myAudio.src = src;
            myAudio.load();
        },

        playAudio: function()
        {
            myAudio = document.getElementById('myAudio');
            myAudio.play();
        },

        pauseAudio: function()
        {
            myAudio = document.getElementById('myAudio');
            myAudio.pause();
        }
    }
</script>